$(document).ready(function(){
	$('.confirm_region .aprove').on('click', function(e){
		var _this = $(this);
		$.removeCookie('current_region');
		$.cookie('current_region', _this.data('id'), {path: '/',domain: arNextOptions['SITE_ADDRESS']});
		_this.closest('.confirm_region').remove();
		ym(50387788,'reachGoal','GeoStartModalYES');
		if(typeof _this.data('href') !== 'undefined')
			location.href = _this.data('href');
	})
	
	$('.js_city_change').on('click', function(){
		var _this = $(this);
		$('.js_city_chooser').trigger('click');
		console.log($('.js_city_chooser'));
		ym(50387788,'reachGoal','GeoStartModalOTHER')
		_this.closest('.confirm_region').remove();
	})
	
	$('.js_city_chooser').on('click', function(){
		var _this = $(this);
		_this.closest('.region_wrapper').find('.confirm_region').remove();
	})
});